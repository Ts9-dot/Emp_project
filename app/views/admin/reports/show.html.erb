<h1>Report Details</h1>
<!-- Add logic to display specific report details here -->
<h1>Report: <%= @report.title %></h1>
<p><strong>Generated on:</strong> <%= @report.created_at.strftime("%Y-%m-%d") %></p>

<table>
  <thead>
    <tr>
      <th>Employee Name</th>
      <th>Email</th>
      <th>Position</th>
      <th>Department</th>
    </tr>
  </thead>
  <tbody>
    <% @report.employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.position %></td>
        <td><%= employee.department %></td>
      </tr>
    <% end %>
  </tbody>
</table>
